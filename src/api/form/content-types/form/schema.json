{
  "kind": "collectionType",
  "collectionName": "forms",
  "info": {
    "singularName": "form",
    "pluralName": "forms",
    "displayName": "Form",
    "description": "Form builder with fields and configuration"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "fields": {
      "type": "component",
      "repeatable": true,
      "component": "form.field",
      "required": true
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "successMessage": {
      "type": "text",
      "default": "Thank you for your submission!"
    },
    "notificationEmails": {
      "type": "json"
    },
    "storePdf": {
      "type": "boolean",
      "default": false
    },
    "sendPdf": {
      "type": "boolean",
      "default": false
    },
    "rateLimitPerIP": {
      "type": "integer",
      "default": 10,
      "min": 1
    },
    "submissions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::form-submission.form-submission",
      "mappedBy": "form"
    }
  }
}

